---
apiVersion: kubeadm.k8s.io/v1beta4
kind: InitConfiguration
bootstrapTokens:
- groups:
  - system:bootstrappers:kubeadm:default-node-token
  ttl: 24h0m0s
  usages:
  - signing
  - authentication
localAPIEndpoint:
  advertiseAddress: {{ hostvars[groups['k8s_masters'][0]].ansible_facts.default_ipv4.address  }}
  bindPort: 6443
nodeRegistration:
  criSocket: "{{ cri_socket }}"
  imagePullPolicy: IfNotPresent
  name: {{ ansible_facts.fqdn }}
  taints:
  - effect: NoSchedule
    key: node-role.kubernetes.io/master
---
apiVersion: kubeadm.k8s.io/v1beta4
kind: ClusterConfiguration
certificatesDir: /etc/kubernetes/pki
clusterName: {{ kube_domain_name }}
controllerManager: {}
dns: {}
etcd:
  local:
    dataDir: /var/lib/etcd
imageRepository: "registry.k8s.io"
apiServer:
  timeoutForControlPlane: 4m0s
  extraArgs:
  - name: authorization-mode
    value: Node,RBAC
  - name: bind-address
    value: 0.0.0.0
  - name: service-cluster-ip-range
    value: {{ service_subnet }}
  - name: service-node-port-range
    value: 30000-32767
kubernetesVersion: {{ kube_version }}
networking:
  dnsDomain: {{ kube_domain_name }}
  podSubnet: {{ pod_subnet }}
  serviceSubnet: {{ service_subnet }}
scheduler: {}
---
apiVersion: kubeproxy.config.k8s.io/v1alpha1
kind: KubeProxyConfiguration
bindAddress: 0.0.0.0
clusterCIDR: {{ pod_subnet }}
ipvs:
  strictARP: True
mode: ipvs
---
apiVersion: kubelet.config.k8s.io/v1beta1
kind: KubeletConfiguration
clusterDNS:
- {{ nodelocaldns_local_ip }}
systemReserved:
  memory: {{ system_memory_reserved }}
  cpu: {{ system_cpu_reserved }}
  ephemeral-storage: "2Gi"
# Default: "10Mi"
containerLogMaxSize: {{ container_log_max_size }}
# Default: 5
containerLogMaxFiles: {{ container_log_max_files }}

